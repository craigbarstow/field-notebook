<div id="show-link-wrapper" class="row">
  <div class="small-4 column">
    <%= link_to "< Home", projects_path, class: 'button large' %>
  </div>
  <div class="small-4 column">
    <%= link_to "Edit Basic Info", edit_project_path(@project.id), class: 'button large' %>
  </div>
</div>
<div class="row show-project-wrapper">
  <div class="small-10 columns">
    <h2><%= @project.title %><h2>
    <h4>Location: <%= @project.location %></h4>
    <h4>Coordinates: <%= @project.coordinates %></h4>
    <h4>Date: <%= @project.date %></h4>
    <p>Description: <%= @project.description %></p>
  </div>
  <div id="project-content" class="small-12 columns">
  <% @project_contents.each do |content_item| %>
    <% if content_item[:type] == :text_area %>
      <div class="text-area" id="<%= content_item[:content][:id] %>">
        <%= content_item[:content][:content].html_safe %>
      </div>
    <% end %>
  <% end %>
  </div>
  <div class="small-12 columns" id="add-content-bar">
    <div class="small-4 columns button large" id="add-txt-btn">Add Text</div>
    <div class="small-4 columns button large" id="add-img-btn">Add an Image</div>
    <div class="small-4 columns button large" id="add-map-btn">Add a Map</div>
  </div>
</div>
