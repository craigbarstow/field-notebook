<div class="row">
  <div class="small-12 column" id="new-map-wrapper">
    <%= link_to "< Back", project_path(@project), class: 'button radius back-btn' %>
    <h1>Create a New Map</h1>
    <h3>Click on the map to add a point. Click on an existing point to delete it.</h3>
    <div id="new-map-canvas" class="small-12 columns"></div>
    <%= form_for [@project, @map] do |f| %>
      <%= f.label :title %>
      <%= f.text_area :title %>

      <%= f.label :caption %>
      <%= f.text_area :caption %>

      <%= f.submit "Add Map" %>
    <% end %>
  </div>
</div>
